<html lang='pt-br'>
    <head>
        <meta charset="utf-8">
        <link rel="shortcut icon" type="image/x-icon" href="/images/logo.ico">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <link type="text/css" rel="stylesheet" href="/styles/App.css">
        <title>Faça seu pedido</title>
    </head>
    <header>
        <%- include('../partials/menu.ejs') %>
    </header>

    <body>
       
        <div class="container-fluid">
        
            <h1>Faça seu pedido</h1>
            <hr />
         



            <div class="container-fluid text-center col-lg-8 mx-auto">
                <hr> 
                <hr> 
                 <%if(validacao){%>
                     <% for(i=0;i<validacao.errors.length; i++){%>
                         <p>
                             <%=validacao.errors[i].msg %>
                         </p>
                     <%}%>
                 <%}%>
                 <hr> 
                 <hr> 
             </div>


            <div class="col-lg-8 mx-auto">
                <form method='post' action='/pedidos'> 
                    <section class="container-fluid">
                        <div class="form-group-sm">
                            <label>Nome do cliente:</label> 
                            <input class="form-control" type="text" value="<%=dados.nome_cliente%>" name="cliente" placeholder="Digite seu nome">
                        </div>
                        <div class="form-group-sm"> 
                            <label>Endereço:</label> 
                            <input class="form-control" type="text" value="<%=dados.endereço%>" name="endereço" placeholder="Digite seu endereço">
                        </div>
                        <div class="form-group-sm"> 
                            <label>Telefone:</label> 
                            <input class="form-control" type="text" value="<%=dados.telefone%>" name="telefone" placeholder="Digite seu telefone">
                        </div>
                        <div class="form-group-sm"> 
                            <label>Nome do produto:</label> <br>
                            <select class="col-lg-12" value="<%=dados.nome_produto%>" name="nome_produto">
                                <option value="">Escolha um produto</option>
                                <option value="Geladeira Side">Geladeira Side</option>
                                <option value="Geladeira Branca">Geladeira Branca</option>
                                <option value="Geladeira Prata">Geladeira Prata</option>
                                <option value="Fogão Consul">Fogão Consul</option>
                                <option value="Fogão Atlas">Fogão Atlas</option>
                                <option value="Micro-ondas Consul">Micro-ondas Consul</option>
                                <option value="Micro-ondas Philco">Micro-ondas Philco</option>
                                <option value="Micro-ondas Eletrolux">Micro-ondas Eletrolux</option>
                                <option value="Lava-louça Eletrolux">Lava-louça Eletrolux</option>
                                <option value="Lava-louça Brastemp">Lava-louça Brastemp</option>
                                <option value="Máquina Brastemp">Máquina Brastemp</option>
                                <option value="Máquina Philco">Máquina Philco</option>
                            </select><br> 
                        </div>
                        <div class="form-group-sm">   
                            <label>Valor unitário:</label> 
                            <input class="form-control" type="float" value="<%=dados.valor_unitario%>" name="valor_unitario" placeholder="Digite um valor em reais">  
                        </div>
                        <div class="form-group-sm"> 
                            <label>Quantidade: </label> 
                            <input class="form-control" type="number" value="<%=dados.quantidade%>" name="quantidade" placeholder="Digite um número inteiro">
                        </div>
                        <div class="form-group-sm"> 
                            <button class="col-lg-12 btn btn-success" type="submit">Cadastrar pedido</button><br><br> 
                            <button class="col-lg-12 btn btn-info" type="reset">Limpar dados</button><br><br>   
                        </div>
                    </section>
                </form> 
            </div>
        </div>
       
    </body>

    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>

</html>



    
